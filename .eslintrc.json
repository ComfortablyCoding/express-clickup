{
	"root": true,
	"env": {
		"commonjs": true,
		"es2020": true,
		"node": true,
		"jest": true
	},
	"parser": "@typescript-eslint/parser",
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"plugins": ["@typescript-eslint", "prettier"],
	"ignorePatterns": ["node_modules/**/*", "dist/**/*"],
	"parserOptions": {
		"ecmaVersion": 11
	},
	"rules": {
		"prettier/prettier": "error"
	}
}
